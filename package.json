{
  "name": "expense-splitter",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server/index.ts & bun run client",
    "server": "bun run --watch src/server/index.ts",
    "client": "bunx --bun vite",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "db:start": "podman run --name expense-db -e POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-postgres} -e POSTGRES_DB=${POSTGRES_DB:-expense_splitter} -p 5432:5432 -d postgres:16",
    "db:stop": "podman stop expense-db && podman rm expense-db",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:generate": "bunx prisma generate",
    "prisma:studio": "bunx prisma studio"
  },
  "dependencies": {
    "express": "^4.19.2",
    "@prisma/client": "^5.22.0",
    "zod": "^3.23.8",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "axios": "^1.7.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.9.5",
    "@tanstack/react-query": "^5.90.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "prisma": "^5.22.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.9.3",
    "vite": "^7.1.7"
  }
}
