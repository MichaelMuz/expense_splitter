{
  "name": "expense_splitter",
  "version": "1.0.0",
  "description": "Split Expenses",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "db:start": "set -a && . ./.env && podman run --name expense-postgres -e POSTGRES_PASSWORD -e POSTGRES_DB -p 5432:5432 -d docker.io/library/postgres:16 || podman start expense-postgres",
    "db:stop": "podman stop expense-postgres",
    "backend": "source .env && npm --workspace apps/backend run dev",
    "frontend": "source .env && npm --workspace apps/frontend run dev",
    "dev": "npm run db:start && npm run backend"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.1.0"
  }
}
