{
  "name": "expense-splitter",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "db:start": "set -a && . ./.env && podman run --name expense-postgres -e POSTGRES_PASSWORD -e POSTGRES_DB -p 5432:5432 -d docker.io/library/postgres:16 || podman start expense-postgres",
    "db:stop": "podman stop expense-postgres",
    "backend": "set -a && . ./.env && bunx prisma db push && bun run --watch src/server/index.ts",
    "frontend": "set -a && . ./.env && bunx --bun vite",
    "dev": "bun run db:start && trap 'kill 0' EXIT; bun run backend & bun run frontend & wait",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "prisma:generate": "bunx prisma generate",
    "prisma:studio": "bunx prisma studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.7",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.563.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.9.5",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.1",
    "prettier": "^3.8.1",
    "prisma": "^5.22.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.1.7"
  }
}
